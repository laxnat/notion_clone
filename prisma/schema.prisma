// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Document {
  id        String   @id @default(cuid())
  title     String   @default("Untitled")
  userId    String   // Add this line
  blocks    Block[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@index([userId]) // Add this for faster queries
}

model Block {
  id         String   @id @default(cuid())
  type       String   // "text", "heading1", "heading2", "bulletList", etc.
  content    String   @default("")
  order      Int      // Position in the document
  
  // Document relationship
  documentId String
  document   Document @relation(fields: [documentId], references: [id], onDelete: Cascade)
  
  // Nesting relationship (self-referential)
  parentId   String?  // null = top-level block
  parent     Block?   @relation("BlockChildren", fields: [parentId], references: [id], onDelete: Cascade)
  children   Block[]  @relation("BlockChildren")
  
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([documentId, order]) // Fast queries for ordered blocks
  @@index([parentId])
}